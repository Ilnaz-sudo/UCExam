<QuizScreen>:

    BoxLayout:
        orientation: "vertical"
        size_hint_x: 1 # Основная часть занимает 70% ширины
        BoxLayout:
            orientation: "horizontal"
            spacing: dp(0)
            padding: dp(0)
            size_hint_y: None
            MDLabel:
                id: value
                text:
                halign: "center"
                font_style: "H5"
                theme_text_color: "Primary"
                size_hint_y: None
                height: self.texture_size[1] + dp(1)  # Динамическая высота
            MDIconButton:
                icon: "cog"
                on_press:root.manager.current = 'setting'
                size_hint: None, None
                size: dp(48), dp(48)



        # Заголовок вопроса (MDLabel)
        MDLabel:
            id: question_label
            text:
            haling: "left"
            font_style: "Subtitle1"
            padding: dp(20)
            spacing: dp(5)
            theme_text_color: "Primary"
            size_hint_y: None
            height: self.texture_size[1] + dp(5)  # Динамическая высота
        BoxLayout:
            orientation: "horizontal"


            # Область с вариантами ответов
            ScrollView:
                size_hint: 0.6, 1
                bar_width: dp(10)


                MDList:
                    id:options
                    spacing: dp(10)
                    padding: dp(15)
                    width: 100
                    haling: "left"


            ScrollView:

                size_hint_x: 0.1
                size_hint_y: 1
                effect_cls: "ScrollEffect"

                MDList:
                    id: question_list


        MDBoxLayout:
            orientation: 'horizontal'
            spacing: dp(10)
            padding: dp(10)
            size_hint_y: None

            MDRaisedButton:
                id: back_button
                text: "Назад"
                on_release: root.last_question()
                size_hint: (1, None)
                width: root.width / 3  # делим ширину экрана на 3
                md_bg_color: app.theme_cls.primary_color

            MDRaisedButton:
                id: next_button
                text: "Пропустить"
                on_release: root.next_question()
                size_hint: (None, None)
                width: root.width / 3  # делим ширину экрана на 3
                md_bg_color: app.theme_cls.primary_color



            MDRaisedButton:
                id: end_button
                text: "Закончить"
                on_press:
                    root.manager.current = 'results'
                    root.manager.transition.direction = "left"
                size_hint: (1, None)
                width: root.width / 3  # делим ширину экрана на 3
                md_bg_color: app.theme_cls.primary_color






